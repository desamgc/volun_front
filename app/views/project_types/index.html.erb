<h1>Listing Project Types</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_types.each do |project_type| %>
      <tr>
        <td><%= project_type.kind %></td>
        <td><%= project_type.description %></td>
        <td><%= project_type.active %></td>
        <td><%= link_to 'Show', project_type %></td>
        <td><%= link_to 'Edit', edit_project_type_path(project_type) %></td>
        <td><%= link_to 'Destroy', project_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

